        columns: [            
            { title: "STT", field: "STT", formatter: 'textarea', vertAlign: "middle", width: 80, headerHozAlign: "center", hozAlign: "center" },
            { title: "Mã việc làm", field: "MaViecLam", formatter: 'textarea', vertAlign: "middle", minWidth: 100, headerHozAlign: "center", hozAlign: "center" },
