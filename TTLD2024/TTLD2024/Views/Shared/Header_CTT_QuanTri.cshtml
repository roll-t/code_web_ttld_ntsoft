    .box-fl-info {
        height: 65px;
    }

    @@media (max-width: 989px) {
        .nav-header-2 {
            gap: 0px 5px;
        }

        .nav-header-link {
            font-size: 11px !important;
        }

        #nav-right {
            gap: 10px !important;
        }

        .navbar-header.pull-left {
            padding-left: 10px;
        }

        #menu-toggler {
            display: block !important;
        }

        .pull-left.menu {
            position: absolute;
            top: 47px;
            left: 0;
            width: 250px;
        }
    }

    @@media (max-width: 800px) {
        .nav-header-link {
            font-size: 8px !important;
