
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #cke_bottom_detail, .cke_bottom, .cke_top {
        display: none !important;
    }

    @@media (min-width: 992px) {
        #mdThemMoi .modal-dialog {
            min-width: 55% !important;
        }
    }

    @@media (max-width: 991px) {
        #mdThemMoi .modal-dialog {
            width: 100% !important;
            max-width: 100% !important;
        }
    }
    .modal-footer {
         display: unset !important; 
    }

    .cke_chrome {
        padding: 0px !important;
        border: none !important;
        background: #ffffff !important;
    }

    .frame-file {
        width: 65px;
        height: 65px;
        border: 1px solid #d5d5d5;
        border-radius: 4px;
        float: left;
        position: relative;
    }

    .frame-image {
        width: 60px;
        height: 60px;
        float: left;
        background-position: center;
        background-size: cover;
        border-radius: 4px;
        position: relative;
    }

    .frame-file .fa-arrow-down {
        position: absolute;
        top: -8px;
        right: 8px;
        font-size: 15px;
        color: #fff;
        background-color: #4CAF50;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: none;
        padding-top: 2px;
        text-align: center;
        z-index: 99;
    }

    .frame-file .fa-trash-o {
        position: absolute;
        top: -8px;
        right: -8px;
        font-size: 15px;
        color: #fff;
        background-color: red;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: none;
        padding-top: 2px;
        text-align: center;
        z-index: 99;
    }

    .frame-top {
        float: left;
        width: 100%;
        text-align: center;
    }

    .frame-file:hover > .fa-trash-o, .frame-file:hover > .fa-arrow-down {
        display: block;
    }
</style>
