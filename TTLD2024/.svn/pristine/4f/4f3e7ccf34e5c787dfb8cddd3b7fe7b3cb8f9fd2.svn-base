    }

    .message-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .message-item:not(:last-child) {
        border-bottom: 0px;
    }

    .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
        background-color: transparent !important;
    }

    .card-header > ul.card-header-pills {
        background-color: var(--tblr-nav-pills-link-active-bg) !important;
    }

    .card {
        margin: 5px 0px 5px 0px;
    }

    .card-header:first-child {
        border-radius: var(--tblr-card-border-radius) var(--tblr-card-border-radius) 0 0 !important;
    }

    .nav-tabs .nav-link.active {
        border-bottom: 3px solid var(--tblr-primary) !important;
    }
</style>
