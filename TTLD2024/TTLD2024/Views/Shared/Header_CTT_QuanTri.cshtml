        }

    #nav-right {
        display: flex;
        gap: 0 50px;
    }

    .nav-header-2 {
        display: flex;
        gap: 0px 30px;
        align-items: center;
        margin: 0px;
    }

        .nav-header-2 .nav-header-item {
            list-style: none;
        }

        .nav-header-2 .nav-header-link {
            color: #fff;
            font-size: 15px;
            text-decoration: none;
            text-transform: uppercase;
        }

        .nav-header-2 i {
