        buttons[0].addEventListener('click', (e) => {
            e.preventDefault()
        })
        buttons[1].addEventListener('click', (e) => {
            e.preventDefault()
        })
        function offline() { //function for offline
            wrapper.classList.remove("hide");
            toast.classList.add("offline");
            title.innerText = "You're offline now";
            subTitle.innerText = "Opps! Internet is disconnected.";
            wifiIcon.innerHTML = '<i class="uil uil-wifi-slash"></i>';
        }
        $(".close-icon").on("click", async function () {
            $("#show_canhbao").removeClass("hide");
            $("#show_canhbao").addClass("hide");
        });
        function canhbao(noidung) {
            $("#show_canhbao").removeClass("hide");
            $('#show_canhbao').removeClass("tb");
            const wrapper = document.querySelector(".wrapper"),
                toast = wrapper.querySelector(".toast"),
                title = toast.querySelector("span"),
                subTitle = toast.querySelector("p"),
                wifiIcon = toast.querySelector(".icon"),
                closeIcon = toast.querySelector(".close-icon");
            toast.classList.remove("offline");
            title.innerText = "Cảnh báo";
            subTitle.innerText = noidung;
            setTimeout(function () {
                $("#show_canhbao").removeClass("hide");
                $("#show_canhbao").addClass("hide");
            }, 5000);
        }
        function thongbao(noidung) {
            $("#show_canhbao").removeClass("hide");
            $('#show_canhbao').addClass("tb");
            const wrapper = document.querySelector(".wrapper"),
                toast = wrapper.querySelector(".toast"),
                title = toast.querySelector("span"),
                subTitle = toast.querySelector("p"),
                wifiIcon = toast.querySelector(".icon"),
                closeIcon = toast.querySelector(".close-icon");
            toast.classList.remove("offline");
            title.innerText = "Thông báo";
            subTitle.innerText = noidung;
            setTimeout(function () {
                $("#show_canhbao").removeClass("hide");
                $("#show_canhbao").addClass("hide");
            }, 5000);
        }


