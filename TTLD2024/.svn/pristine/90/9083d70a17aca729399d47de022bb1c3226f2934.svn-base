
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/CongThongtinViecLam.cshtml";
}
<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">
    <style>
        #header-breadcrumb{
           border-radius:12px;
           box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);
           border: solid 1px #ECECEC;
           margin-top: 10px;
           padding-left: 18px;
       }
         .has-search .form-control-feedback {
             right: initial;
             left: 0;
             color: #ccc;
         }

         .has-search .form-control {
             padding-right: 12px;
             padding-left: 34px;
         }

       #container-big{
           background:#B2B0B0;
       }
       #content{
           padding:6px;
           /*border:1px solid #D9D9D9;*/
           border-radius:6px;
           margin-bottom:10px;
           padding:8px;
       }
       .content_text{
           box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);
           border-radius:6px;
       }
        .card-title {
            background: #FFF;
            color: #000000;
            border-radius: 8px 8px 0 0;
            font-size: 16px;
            font-weight: 700;
            position: relative;
        }

            .card-title::after {
                position: absolute;
                content: "";
                left: 0;
                width: 100%;
                height: 2.5px;
                background: var(--primary-color);
                bottom: -1.25px;
                max-width: 25%;
            }
       .badge_mucluong{
           color:#ff6a00;
           padding:2px 6px;
           font-size:10px;
           box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.1);
           border:solid 1px #D9D9D9;
           font-weight:600;
       }
       .badge_thoigian{
           color:#3E9EF7;
           padding:2px 6px;
           font-size:10px;
           box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.1);
           border:solid 1px #D9D9D9;
           font-weight:600;
       }
       .list-group-vieclam-new h2{
           font-weight:bolder;
           color:black;
       }
       .list-group-vieclam-new p{
           font-size:10px;
           color:#999;
           margin:3px 0;
       }
       .card li:hover{
           background:#EEEEEE;
       }
       .media{
           border:1px solid #EEEEEE;
           padding:10px 20px;
           border-radius:8px;
           box-shadow: 1px 2px 3px rgba(0,0,0,0.3);
           margin: 10px 0;
       }
       .media h5{
           font-size:16px;
           color:#3E9EF7;
           text-transform:uppercase;
           font-weight:bold;
       }
       .media p{
           color:black;
       }
       .media:hover{
           background:#EEEEEE;
       }
       .img-vanban{
           width:188px;
           height:125px;
           object-position:center;
           object-fit:contain;
       }
       #vanban-empty{
           width:"400px";
           height:"450px";
           object-position:center;
           object-fit:contain;
       }
       #sel_SapXep
       {
           font-size:14px;
           font-weight:400;
           color:#000;
       }
       .option_sel{
           font-size:14px;
           padding: 10px 0;
       }
       .icon_dollar{
           font-size:9px;
       }
        .breadcrumb-vanban {
            margin-top: 4px;
        }
       @@media(max-width:768px){
           .card img{
               margin-bottom:4px;
               width:100%;
           }
           #content_GioiThieu{
               font-size:20px;
           }
           .list-group-item p{
               font-size:20px;
           }
           .list-group-item h2{
               font-size:22px;
           }
           .badge_mucluong,
           .badge_thoigian{
               padding: 1px 5px;
               font-size: 9px;
           }

           .icon_dollar{
               font-size: 8px;
           }
            .list-group-item h2 {
               font-size: 15px;
           }

           .list-group-item p {
               font-size: 12px;
           }
            .media h5 {
               font-size: 12px;
           }

           .media p {
               font-size: 8px;
           }
            .media {
               padding:7px;
           }
           .img-vanban {
               height:51px;
           }
        .breadcrumb-container {
            margin-top: 12px;
        }
        input[type=text].form-control {
            font-size: 10px;
            height: 35px;
        }
        .container-listvanban {
            padding: 14px !important;
        }
       }
       @@media(min-width:992px) and (max-width:1024px){
           .card-title{
               font-size:16px;
           }
           .badge_mucluong,
           .badge_thoigian{
               font-size:8px;
               padding: 1px 4px;
           }
           .badge fa-dollar-sign{
                font-size:8px;
           }
           .list-group-item .row{
               display:flex;
               align-items:center;
           }
        .breadcrumb-container{
            margin-top:10px;
        }
        input[type=text].form-control {
            font-size: 10px;
            height: 35px;
        }

        .container-listvanban {
            padding: 14px !important;
        }

       }
       @@media(min-width:768px) and (max-width:992px) {
           .media h5 {
               font-size: 14px;
           }
        
           .media p {
               font-size: 12px;
           }
       }

        @@media(max-width:992px) {
            .footer-1 {
                padding: 10px 20px !important;
            }
            #sel_SapXep + .select2-container--default{
                margin-bottom:4px;
            }
        }

        @@media(min-width:992px) {
            .container-listvanban {
                padding: 14px !important;
            }
            .breadcrumb-container {
                margin-top: 10px;
            }
        }

        @@media(max-width:468px) {
            .breadcrumb-container {
                margin-top: 20px;
            }
        }
        
    </style>
</asp:Content>
