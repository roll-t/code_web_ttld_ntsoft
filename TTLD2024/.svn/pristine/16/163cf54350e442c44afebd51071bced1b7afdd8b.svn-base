    <style type="text/css">
        .mb-3, .my-3 {
            margin-bottom: 0.5rem !important;
        }

        @@keyframes slideIn {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        #loginbox {
            animation: slideIn 0.5s ease-in-out; /* Thay đổi thời gian và hiệu ứng theo ý muốn */
        }
        /* Để căn giữa theo chiều ngang */
        .text-center1 {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column; /* Đảm bảo các phần tử con nằm dọc */
        }

        /* Để căn giữa theo chiều ngang cho marquee */
        marquee {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .message-loading-overlay {
            position: fixed;
            top: 0;
            bottom: 0;
            right: 0;
            left: 0;
            background-color: rgba(255, 255, 255, .5);
            text-align: center;
            z-index: 9999;
            height: 100%;
            width: 100%;
            overflow: hidden;
        }

            .message-loading-overlay > .ace-icon {
                position: absolute;
                top: 40%;
                left: 49%;
                right: 0;
                text-align: center;
            }
    </style>
</head>

<body class="hold-transition login-page">
    <div id="Loadding_" style="display: none">
