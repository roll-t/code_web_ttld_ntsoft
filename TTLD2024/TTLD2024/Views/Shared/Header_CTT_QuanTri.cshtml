        }

        .user-info {
            display: none !important;
        }

        .box-fl-info div {
            font-size: 20px !important;
        }

        .box-fl-info i {
            font-size: 16px !important;
        }
    }

    @@media only screen and (max-width: 479px) {
        .navbar:not(.navbar-collapse) .ace-nav > li {
