        .overlay-container {
            position: absolute;
            top: 0;
            left: 60%;
            width: 40%;
            height: 100%;
            overflow: hidden;
            transition: transform 0.6s ease-in-out;
            z-index: 100;
        }

            .overlay-container .overlay {
                background: linear-gradient(-45deg, #9b59b6, #edc4ff, #ffffff);
