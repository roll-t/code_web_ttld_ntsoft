        /* The container */
        .form-group.term-and-policy-wrapper > .checkbox-container {
            display: block;
            position: relative;
            padding-left: 18px;
            margin-top: 2px;
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

            /* Hide the browser's default checkbox */
            .form-group.term-and-policy-wrapper > .checkbox-container input {
                position: absolute;
                opacity: 0;
                cursor: pointer;
                height: 0;
                width: 0;
            }

        /* Create a custom checkbox */
        .checkmark {
            position: absolute;
            top: 0;
            left: 0;
            height: 18px;
            width: 18px;
            border-radius: 4px;
            border: 1px solid #333333;
            transition: all 0.25s ease-in-out;
        }

        /* When the checkbox is checked, add a blue background */
        .form-group.term-and-policy-wrapper > .checkbox-container input:checked ~ .checkmark {
            background-color: #005AFF;
            border-color: #005AFF;
        }

        /* Create the checkmark/indicator (hidden when not checked) */
        .checkmark:after {
            content: "";
            position: absolute;
            display: none;
        }

        /* Show the checkmark when checked */
        .form-group.term-and-policy-wrapper > .checkbox-container input:checked ~ .checkmark:after {
            display: block;
        }

        /* Style the checkmark/indicator */
        .form-group.term-and-policy-wrapper > .checkbox-container .checkmark:after {
            left: 5px;
            top: 1px;
            width: 7px;
            height: 11px;
            border: solid white;
            border-width: 0 1px 1px 0;
            -webkit-transform: rotate(45deg);
