    #menu-toggler {
        display: none;
    }

    .pull-left.menu {
        display: none;
    }
    #menu-header a.nav-link {
        background: white;
        justify-content: flex-start;
        padding-left: 10px;
        color: black !important;
    }
    #menu-mobile-qt .navbar {
        background: white;
        border-radius: 4px;
