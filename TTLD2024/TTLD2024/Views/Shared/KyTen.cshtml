@{
    Layout = null;
}
<style>
    .option-kyten {
        background: #E9EEF6;
        padding: 4px 0;
        border-radius: 4px;
        margin: 0 20px;
    }
    #mdThemMoi_ChuKy_us .modal-dialog {
        width: 422px;
    }
    .box-option {
        cursor: pointer ;
        padding: 5px 5px;
    }
    .box-option.active {
        background: blue;
        color: white;
        border-radius: 4px;        
    }
    div#color-palette .color-btn {
        height: 18px;
        border: unset;
        width: 18px;
    }
    .color-btn {
        border: none;
        width: 30px;
        height: 30px;
        margin: 2px;
        cursor: pointer;
        border-radius: 2px;
        position: relative;
    }

    .check-mark {
        color: white;
        font-size: 11px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .color-btn.active .check-mark {
        display: block;
    }
    div#color-palette {
        margin: 0 20px;
    }
</style>
@* Modal ky ten *@
