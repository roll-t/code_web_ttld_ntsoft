                <li class="light-blue dropdown-modal">
                    <a id="btnTongQuan" data-toggle="dropdown" href="#" class="dropdown-toggle" runat="server">
                        <img class="nav-user-photo" src="~/Images/user.png" alt="Jason's Photo" />
