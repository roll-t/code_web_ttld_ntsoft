                                    <select class="form-control input-sm" id="MucLuong_TimKiem_us"></select>
                                </div>
                                <div class=" col-md-6">
                                    <label for="KinhNghiem_TimKiem_us" class="form-label label-timkiem"><b>Kinh nghiệm</b></label>
