
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/CongThongtinViecLam.cshtml";
}
<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">
    <style>
       #container-big{
           background:B2B0B0;
       }
       #header-breadcrumb{
           border-radius:12px;
           box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);
           border: solid 1px #ECECEC;
           margin-top: 10px;
           padding-left: 18px;
       }
       #content_text{
           border: solid 1px #ECECEC;
           box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);
           border-radius:6px;
       }
        .card-title {
            background: #FFF;
            color: #000000;
            border-radius: 8px 8px 0 0;
            font-size: 16px;
            font-weight: 700;
            position: relative;
        }

            .card-title::after {
                position: absolute;
                content: "";
                left: 0;
                width: 100%;
                height: 2.5px;
                background: var(--primary-color);
                bottom: -1.25px;
                max-width: 25%;
            }
       .badge_mucluong{
           color:#ff6a00;
           padding:2px 6px;
           font-size:10px;
           box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.1);
           border:solid 1px #D9D9D9;
           font-weight:600;
       }
       .badge_thoigian{
           color:#3E9EF7;
           padding:2px 6px;
           font-size:10px;
           box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.1);
           border:solid 1px #D9D9D9;
           font-weight:600;
       }
       .list-group-vieclam-new h2{
           font-weight:bolder;
           color:black;
       }
       .list-group-vieclam-new p{
           font-size:10px;
           color:#999;
           margin:3px 0;
       }
       .card li:hover{
           background:#EEEEEE;
       }
       @@media(max-width:768px){
           .card img{
               margin-bottom:4px;
               width:100%;
           }
           #content_GioiThieu{
               font-size:20px;
           }
           .list-group-item p{
               font-size:20px;
           }
           .list-group-item h2{
               font-size:22px;
           }
       }
       @@media(min-width:992px) and (max-width:1024px){
           .card-title{
               font-size:16px;
           }
           .badge_mucluong,
           .badge_thoigian{
               font-size:8px;
               padding: 1px 4px;
           }
           .badge fa-dollar-sign{
                font-size:8px;
           }
           .list-group-item .row{
               display:flex;
               align-items:center;
           }
       }
        .breadcrumb-gioithieu {
            margin-top: 14px;
        }

        #content_text {
            padding: 20px 20px !important;
        }

        @@media(min-width:992px) and (max-width:1023px) {
            .breadcrumb-container {
                margin-top: 10px;
            }
        }

        @@media(max-width:991px) {
            .breadcrumb-container {
                margin-top: 20px;
            }

            .footer-1 {
                padding: 14px !important;
            }
            .container-gioithieu {
                padding: 20px !important;
            }
            .breadcrumb-gioithieu {
                padding-left: 10px !important;
            }
        }
        
    </style>
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">

    <div class="breadcrumb-container">
        <div class="container">
            <nav class="breadcrumb is-small breadcrumb-gioithieu" aria-label="breadcrumbs">
                <ul>
                    <li><a href="/trang-chu.html">Trang chủ</a></li>
                    <li class="is-active"><a href="#" aria-current="page">Giới thiệu</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="container mt-3 mb-3 container-gioithieu">
        <div class="row">
            <div class="col-md-9 col-ms-7 col-xs-12">
                <div class="container mt-2 mb-2 p-5 " id="content_text">
                    <div class="content" id="content_GioiThieu">
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-ms-5 col-xs-12">
                <div class="card">
                    <div class="card-title p-3 ">
                        TIN TỨC NỔI BẬT
                    </div>
                    <ul class="list-group list-group-flush" id="list-vanbannew">
                    </ul>
                </div>
                <div class="card">
                    <div class="card-title p-3">
                        VIỆC LÀM MỚI NHẤT
                    </div>
                    <ul class="list-group list-group-flush" id="listCongViecMoiNhat">
                    </ul>
                </div>
                <div class="card">
                    <div class="card-title p-3">
                        VIỆC LÀM LƯƠNG CAO
                    </div>
                    <ul class="list-group list-group-flush" id="listViecLamLuongCao">
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Areas/CongThongTinViecLam/Scripts/GioiThieu.js?v=@DateTime.Now.Ticks.ToString()"></script>
</asp:Content>