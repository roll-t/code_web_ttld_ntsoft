
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterPage_CTT_QuanTri_ViecLam.cshtml";
}
<style>
         @@media (max-width: 991px) {
            .modal-dialog {
                width: 100%;
            }

            .page-content {
                padding-top: 49px !important;
            }

            .bootbox .modal-dialog {
                width: 40%;
            }
        }

        @@media (min-width: 992px) {
            .modal-dialog {
                width: 40%;
            }

            .bootbox .modal-dialog {
                width: 40%;
            }
             #modal_xemHSLuuTru .modal-dialog {
                 width: 50%;
             }
        }
        .box-file{
            padding:0;
        }
</style>
<style>
    .tooltip-custom {
        display: inline-block;
        position: relative;
        width: 100%
    }

        .tooltip-custom .tooltip-container {
            min-width: 600px;
            /*top:50%;*/
            /*margin-left:10px;*/
            color: #444444;
            background-color: #fff;
            font-weight: normal;
            font-size: 13px;
            border-radius: 4px;
            position: relative;
            z-index: 99999999;
            box-sizing: border-box;
            box-shadow: 0 1px 8px rgba(0,0,0,0.5);
            display: block;
            /*transform:translate(0, -30%);*/
        }

        .tooltip-custom .right {
            /*left:80%;*/
        }

        .tooltip-custom .left {
            right: 80%;
        }

        .tooltip-custom:hover .tooltip-container {
            display: block;
        }

    .container-view-bg {
        width: 100%;
        height: 100px;
    }

        .container-view-bg img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .view-container {
        padding: 15px;
    }

    .view-content {
        display: flex;
        gap: 0 15px;
        position: relative;
        margin-bottom: 10px;
        border-bottom: 1px solid var(--primary-color);
        background: #fff;
        /*margin-top: -50px;*/
        padding: 10px;
    }

    .view-logo {
        width: 150px;
        height: 100px;
    }

        .view-logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .view-tencongty {
        font-size: 18px;
        font-weight: bold;
    }

    .view-sltuyendung {
        position: absolute;
        bottom: 10px;
        right: 10px;
        color: var(--primary-color);
        text-decoration: underline;
        cursor: pointer;
    }

    .view-body h5 {
        font-size: 17px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .view-body .view-gioithieu {
        font-style: italic;
        display: -webkit-box;
        -webkit-line-clamp: 6;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        word-break: break-word;
    }

    #list-congviec {
        display: flex;
        flex-direction: column;
        gap: 10px 0;
        margin-top: 20px;
    }

    .congviec-item {
        display: flex;
        gap: 0 20px;
        padding: 10px;
        border-radius: 4px;
        background: #f7fbff;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }

    .congviec-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
        align-items: center;
    }

    .congviec-content {
        width: 100%;
    }

    .congviec-header a:hover {
        color: var(--primary-color);
    }

    .congviec-header .congviec-title {
        font-size: 17px;
        transition: 0.2s linear;
        text-decoration: none;
        color: black;
        font-weight: bold;
    }

    .congviec-info-label {
        padding: 5px 8px;
        background: #eee;
        border-radius: 4px;
    }

    .TenCongTy {
        color: #84899c;
    }

    .congviec-info {
        display: flex;
        justify-content: space-between;
        gap: 0 10px;
        align-items: center;
    }

    .congviec-item .avatar {
        width: 120px;
        height: 100px;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }

        .congviec-item .avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 0 12px;
    }

    .contact-desc {
        color: #a1a1a1;
        font-style: italic;
    }

    .btn-like {
        cursor: pointer;
    }

    .view-body {
        border-bottom: 1px solid var(--primary-color);
    }

    .view-footer {
        padding-top: 5px;
        display: flex;
        justify-content: flex-end;
    }

    .btn-primary {
        padding: 7px 13px !important;
        background-color: var(--primary-color) !important;
        color: #fff !important;
        transition: 0.2s linear;
        cursor: pointer;
        border-radius: 3px;
        display: inline-block;
        min-width: 95px;
        text-align: center;
        border: 1px solid inherit;
    }
    @@media (max-width: 687px) {
        .tooltip-custom .tooltip-container {
            min-width: calc(100vw - 20px);
        }
    }
</style>

<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs breadcrumbs-fixed" id="breadcrumbs">
            <h3>DANH SÁCH VIỆC LÀM ĐANG LƯU</h3>
        </div>
        <div class="page-content" style="background: white !important;">
            <div class="box-file">
                <div class="row">
                    <div class="col-md-3">
                        <span class="input-icon" style="padding-bottom: 2px; padding-top: 2px; width: 100%;">
                            <input type="text" placeholder="Nội dung tìm kiếm ..." class="nav-search-input" id="timKiemHoSoluuTru" autocomplete="off" style="width: 100%;">
                            <i class="ace-icon fa fa-search nav-search-icon"></i>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div id="Grid1" class="GridData"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
