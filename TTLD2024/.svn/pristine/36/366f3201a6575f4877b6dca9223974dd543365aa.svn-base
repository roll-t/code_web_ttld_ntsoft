<script>
    $(document).ready(function () {
        getFooterDiaChi();
        getFooterDiaChiCTy();
    });
    function getFooterDiaChi() {
        var GetAll = NTS.getAjax_NoVerifi("/CongThongTin/TrangChu/getFooterDiaChi", {});
        if (GetAll.Result.length > 0) {
            for (var i = 0; i < GetAll.Result.length; i++) {
                let data = GetAll.Result[i];
                $('#LoadCauHinhCauHinhWebSite1').append(
                    `  <h4>${data.tenDonVi}</h4>
                    <div class="adr">
                        <span class="block_fonticon"><i class="fa fa-map-marker"></i>${data.diaChi}</span>
                    </div>
                    <div class="adr">
                        <span><i class="fa fa-phone"></i>Điện thoại: ${data.soDT}</span>
                    </div>
                    <div class="adr">
                        <span><i class="fa fa-envelope"></i>Email: ${data.Email}</span>
                    </div>
                    <div class="adr">
                        <span><i class="fa-solid fa-fax"></i>Fax: ${data.Fax}</span>
                    </div>
                    <div class="adr">
                        <span><i class="fa fa-globe"></i>Website: ${data.web}</span>
                    </div>`);
            }
        }
    }

