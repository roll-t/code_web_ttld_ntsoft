    function XemChiTietGhiChuUS_Chon(ID) {
        $("#mdXemThem_US_Chon").modal('show');
        $('#tieuDeModalCT_US_Chon').text('Chi tiết nội dung ghi chú');
        const result = NTS.getAjax("/DanhMuc/DoiTuongNN/GhiChuCT", { id: ID });
