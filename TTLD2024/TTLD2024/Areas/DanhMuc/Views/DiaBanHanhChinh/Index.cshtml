
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    @@media (min-width: 992px) {
        #mdThemMoi .modal-dialog {
            width: 50% !important;
        }
    }

    @@media (max-width: 993px) {
        #mdThemMoi .modal-dialog {
            width: 100% !important;
        }
    }

    .modal-footer {
        display: unset !important;
    }
</style>
<input type="hidden" id="DiaBanHanhChinhID" />
<div class="row">
    <div class="col-md-4">
        <div class="input-group">
            <input style=" height: 32px !important;" class="form-control input-sm" type="text" id="timKiem" placeholder="Nội dung tìm kiếm ..." autocomplete="off" />
            <span class="input-group-addon" style="margin: 0; padding: 0; border: none;">
                <button class="btn btn-primary btn-sm" id="TimKiemNangCao" style="border-top-left-radius: 0 !important; border-bottom-left-radius: 0 !important; width: 35px; height: 32px"><span class="fas fa-sliders-h" aria-hidden="true"></span></button>
            </span>
            <span class="input-icon-addon" style="margin-right: 40px;">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path><path d="M21 21l-6 -6"></path></svg>
            </span>
        </div>
        <div id="KhungTimKiem" style="width: 35%; z-index: 99; position: absolute; margin-top: 4px; background: #fff; padding: 12px 12px 8px 12px; border: 1px solid #e5e5e5; border-radius: 4px; box-shadow: rgba(0, 0, 0, 0.20) 0px 5px 15px; display: none">
            <div class="row" style=" margin-bottom: 4px">
                <div class="col-md-6">
                    <span style="font-size: 16px; color: #38b8e6"><i class="fa fa-search"></i>Tìm kiếm nâng cao</span>
                </div>
            </div>
            <div class="row mb-2">
                <div class=" col-md-6">
                    <label for="TinhID_TimKiem" class="form-label">Tỉnh</label>
                    <select class="form-control input-sm" id="TinhID_TimKiem_us"></select>
                </div>
                <div class=" col-md-6">
                    <label for="HuyenID_TimKiem" class="form-label">Huyện</label>
                    <select class="form-control input-sm" id="HuyenID_TimKiem_us"></select>
                </div>
            </div>
            <div class="row mb-2">
                <div class=" col-md-6">
                    <label for="XaID_TimKiem" class="form-label">Xã</label>
                    <select class="form-control input-sm" id="XaID_TimKiem_us"></select>
                </div>
                <div class=" col-md-6">
                    <label for="Loai_TimKiem" class="form-label">Loại địa bàn</label>
                    <select class="form-control input-sm" id="Loai_TimKiem_us"></select>
                </div>
            </div>
            <hr style="margin: 1rem 0;" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group" style="text-align: right">
                        <a href="#" class="btn btn-outline-danger" id="DongTimKiem"><i class="fa fa-close"></i> &ensp; Đóng</a>
                        <button type="button" id="TimKiem" class="btn btn-success"><i class="fa fa-search"></i>&ensp;Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col mb-2">
        <div class="text-end">
            <button type="button" class="btn btn-primary btn-nts-them" id="btnThemMoi"><i class="fa fa-plus"></i>&ensp;Thêm mới (F2)</button>
            <div class="btn-group">
                <div class="dropdown d-inline">
                    <button class="btn btn-primary dropdown-toggle-hide-arrow  height-button-icon" type="button" id="growthReportId" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="blue fa fa-ellipsis-h"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-lg-end w-auto">
                        <a class="dropdown-item textsize-item" href="javascript:void(0);" id="btnPrint"><i class="text-warning fa fa-print iconsize-item"></i>&ensp; In</a>
                        <a class="dropdown-item textsize-item" href="javascript:void(0);" id="btnExport"><i class="text-success fa fa-file-excel-o iconsize-item"></i>&ensp; Xuất Excel</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="space-4"></div>
<div class="row">
    <div class="col-md-12">
        <div id="Grid1"></div>
    </div>
</div>
<div id="mdThemMoi" class="modal modal-blur fade" tabindex="-1" aria-modal="true" role="dialog" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header nts-modal">
                <h5 id="lblTieuDeThemMoi" class="modal-title text-bold">Thêm mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> &times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="MaDiaBanHanhChinh">Mã</label>
                            <input type="text" class="form-control" id="MaDiaBanHanhChinh" required maxlength="50">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Loai">Loại địa bàn</label>
                            <select class="form-control" id="Loai" tabindex="0"  data-dropdown-parent="#mdThemMoi" required>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="TenDiaBanHanhChinh">Tên địa bàn hành chính</label>
                            <input type="text" class="form-control" id="TenDiaBanHanhChinh" required maxlength="255">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Thuộc địa bàn hành chính</label>
                            <select class="form-control" id="DiaBanHanhChinhID_Loai" tabindex="0" data-dropdown-parent="#mdThemMoi">
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="">Diễn giải</label>
                            <textarea class="form-control" id="DienGiai" rows="3" maxlength="2000"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div style="display: flex; align-items: center; justify-content: space-between">
                    <div class="col-md-6" style="display: flex; align-items: center">
                        <label style="margin-bottom: unset" class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="DangSD">
                            <label class="form-check-label" for="DangSD">Ngưng sử dụng</label>
                        </label>
                    </div>
                    <div class="col-md-6">
                        <div style="float:right;text-align: right">
                            <a href="#" id="btnLuuVaDong" class="btn btn-success ms-auto">
                                <i class="fa fa-save"></i>&ensp;Lưu và đóng (F9)
                            </a>
                            <a href="#" class="btn btn-outline-danger" data-bs-dismiss="modal">
                                <i class="fa fa-close"></i>&nbsp;Đóng (F4)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/Areas/DanhMuc/Scripts/DiaBanHanhChinh.js?v=@DateTime.Now.Ticks.ToString()"></script>