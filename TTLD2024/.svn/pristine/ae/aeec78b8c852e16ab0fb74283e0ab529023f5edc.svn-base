@{
    ViewBag.Title = "Loại Chứng Từ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .modal-content {
        min-height: 70vh;
    }

    @@media (min-width: 992px) {
        #mdThemMoi .modal-dialog {
            width: 60% !important;
            margin-top: 0.5% !important;
            max-width: 100% !important;
        }

        #mdChucNang_us .modal-dialog {
            max-width: 65% !important;
        }

        #mdNhapExcel .modal-dialog {
            width: 85% !important;
            margin-top: 0.5% !important;
            max-width: 100% !important;
        }

        #mdThemMoi2 .modal-dialog {
            width: 27% !important;
        }

        .modal-footer {
            display: block
        }
    }

    .check-inline {
        display: inline-block !important;
    }

    .dropdown-toggle-split::after,
    .dropright .dropdown-toggle-split::after,
    .dropup .dropdown-toggle-split::after {
        margin-left: 0;
        display: inline-block;
        margin-left: .255em;
        vertical-align: .255em;
        content: "";
        border-top: .3em solid;
        border-right: .3em solid transparent;
        border-bottom: 0;
        border-left: .3em solid transparent;
    }

    .dropdown-item#btnKiemTraGhiDe {
        display: block;
        width: 100%;
        padding: .25rem 1.5rem;
        clear: both;
        font-weight: 400;
        color: #212529;
        text-align: inherit;
        white-space: nowrap;
        background-color: transparent;
        border: 0;
        color: white;
    }

    .dropdown-item#btnKiemTraGhiDe:hover {
        color: white !important;
    }

    .dropdown-menu#DivKiemTraGhiDe:hover {
        background-color: #E59729 !important;
        color: white;
    }

    #danhSachQuyen .form-check-input {
        vertical-align: middle !important;
        margin-bottom: 8px;
    }

    .input-double {
        padding: 0.3rem 0.6rem;
        font-size: 12px;
        font-weight: 400;
        line-height: 1.53;
        color: #697a8d;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #d9dee3;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    #mdChonDonVi_us .modal-dialog {
        width: 70% !important;
        max-width: 100% !important;
    }

    .KhungVien {
        padding: 10px 10px 10px 10px !important;
    }
</style>


<div class="row">
    <div class="row flex-row-reverse">
        <div class="col mb-2">
            <div class="text-end">
                <button type="button" class="btn btn-primary btn-nts-them" id="btnThemMoi"><i
                        class="fa fa-plus"></i>&ensp;Thêm mới (F2)</button>
                <div class="btn-group">
                    <div class="dropdown d-inline">
                        <button class="btn btn-primary dropdown-toggle-hide-arrow  height-button-icon btn-nts-them"
                            type="button" id="growthReportId" data-bs-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            <i class="blue fa fa-ellipsis-h"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-lg-end w-auto">
                            <a class="dropdown-item textsize-item" href="javascript:void(0);" id="btnPrint"><i
                                    class="text-warning fa fa-print iconsize-item"></i>&ensp; In</a>
                            <a class="dropdown-item textsize-item" href="javascript:void(0);" id="btnExport"><i
                                    class="text-success fa fa-file-excel-o iconsize-item"></i>&ensp; Xuất Excel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-xs-12">
            <div class="input-icon mb-3">
                <input type="text" value="" class="form-control" placeholder="Nội dung tìm kiếm ..." id="timKiem"
                    autocomplete="off">
                <span id="btnSearch" class="input-icon-addon">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                        stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                        stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
                        <path d="M21 21l-6 -6"></path>
                    </svg>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="Table_LoaiChungTu"></div>
    </div>
    <div class="modal modal-blur fade" id="mdThemMoi" tabindex="-1" aria-modal="true" role="dialog"
        data-bs-backdrop="static">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header nts-modal">
                    <h5 class="modal-title" id="tieuDeModal"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> &times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="UserID" />
                    <fieldset class="KhungVien">
                        <legend><span>1. Thông tin loại chứng từ</span></legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" for="MaLoaiCT">Mã</label>
                                    <input class="form-control input-sm" id="MaLoaiCT" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-6 div-MatKhau">
                                <div class="form-group">
                                    <label class="form-label" for="TenCT">Tên chứng từ</label>
                                    <div class="input-group mb-3" style="margin-bottom: unset !important">
                                        <input class="form-control input-sm" id="TenCT" type="text"
                                            style="height: 30px;" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" for="KyHieuMauCT">Ký hiệu mẫu CT</label>
                                    <input class="form-control input-sm" id="KyHieuMauCT" type="text" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" for="KyHieuCT">Ký hiệu CT</label>
                                    <input class="form-control input-sm" id="KyHieuCT" type="text" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label" for="DienGiai">Diễn giải</label>
                                    <textarea class="form-control input-sm" id="DienGiai" tabindex="0"
                                        data-dropdown-parent="#mdThemMoi"></textarea>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="col-md-12">
                        <fieldset class="KhungVien">
                            <legend><span>2. Thông tin số chứng từ tự tăng</span></legend>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" for="KyHieuPhiaTruoc">Ký hiệu phía trước</label>
                                        <input class="form-control input-sm" id="KyHieuPhiaTruoc" type="text" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" for="ChieuDai">Chiều dài</label>
                                        <input class="form-control input-sm" id="ChieuDai" type="text" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" for="KyHieuPhiaSau">Ký hiệu phía sau</label>
                                        <input class="form-control input-sm" id="KyHieuPhiaSau" type="text" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" for="SoCTMau">Số CT mẫu</label>
                                        <input class="form-control input-sm" id="SoCTMau" type="text" />
                                    </div>
                                </div>
                            </div>

                            <div class="row" style="margin-top:7px">
                                <div class="col-md-12" id="danhSachQuyen">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input quyen" type="checkbox" id="HienKyHieuCT"
                                            value="Xóa">
                                        <span class="form-check-label">Hiện ký hiệu chứng từ</span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input quyen" type="checkbox" id="HienDauGach"
                                            value="Sửa">
                                        <span class="form-check-label">Hiện dấu gạch giữa tháng và số tự tăng</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row" style="margin-top:7px">
                                <div class="col-md-6" id="danhSachQuyen">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault"
                                            id="TuTang">
                                        <label class="form-check-label" for="TuTang">
                                            Tự tăng
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault"
                                            id="TuTangTheoThang" checked>
                                        <label class="form-check-label" for="TuTangTheoThang">
                                            Tự tăng theo tháng
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-md-6" style="display: flex; align-items: center">
                            <label style="margin-bottom: unset" class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="DangSD">
                                <label class="form-check-label" for="DangSD">Đang sử dụng</label>
                            </label>
                        </div>
                        <div class="col-md-6">
                            <div style="float:right;text-align: right">
                                <a href="#" class="btn btn-outline-danger" data-bs-dismiss="modal">
                                    <i class="fa fa-close"></i>&nbsp;Đóng (F4)
                                </a>
                                <a href="#" id="btnLuuVaDong" class="btn btn-success ms-auto">
                                    <i class="fa fa-save"></i>&ensp;Lưu (F9)
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('[data-rel=tooltip]').tooltip({ container: 'body' });
        $('[data-rel=popover]').popover({ container: 'body' });
    });
</script>
<input type="text" hidden id="hdf_LoaiChungTuID" />
<script src="~/Areas/HeThong/Scripts/LoaiChungTu.js?v=@DateTime.Now.Ticks.ToString();"></script>