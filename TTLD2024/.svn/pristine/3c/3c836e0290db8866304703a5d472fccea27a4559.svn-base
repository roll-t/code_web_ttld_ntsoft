    <script type="text/javascript">
        function offline() { //function for offline
            wrapper.classList.remove("hide");
            toast.classList.add("offline");
            title.innerText = "You're offline now";
            subTitle.innerText = "Opps! Internet is disconnected.";
            wifiIcon.innerHTML = '<i class="uil uil-wifi-slash"></i>';
        }
        $(".close-icon").on("click", async function () {
            $("#show_canhbao").removeClass("hide");
            $("#show_canhbao").addClass("hide");
        });
        function canhbao(noidung) {
            $("#show_canhbao").removeClass("hide");
            $('#show_canhbao').removeClass("tb");
            const wrapper = document.querySelector(".wrapper"),
                toast = wrapper.querySelector(".toast"),
                title = toast.querySelector("span"),
                subTitle = toast.querySelector("p"),
                wifiIcon = toast.querySelector(".icon"),
                closeIcon = toast.querySelector(".close-icon");
            toast.classList.remove("offline");
            title.innerText = "Cảnh báo";
            subTitle.innerText = noidung;
            setTimeout(function () {
                $("#show_canhbao").removeClass("hide");
                $("#show_canhbao").addClass("hide");
            }, 5000);
        }
        function thongbao(noidung) {
            $("#show_canhbao").removeClass("hide");
            $('#show_canhbao').addClass("tb");
            const wrapper = document.querySelector(".wrapper"),
                toast = wrapper.querySelector(".toast"),
                title = toast.querySelector("span"),
                subTitle = toast.querySelector("p"),
                wifiIcon = toast.querySelector(".icon"),
                closeIcon = toast.querySelector(".close-icon");
            toast.classList.remove("offline");
            title.innerText = "Thông báo";
            subTitle.innerText = noidung;
            setTimeout(function () {
                $("#show_canhbao").removeClass("hide");
                $("#show_canhbao").addClass("hide");
            }, 5000);
        }
        var AuthID = "";
        $(document).ready(function () {

            if (location.href.search('=') != -1) {
                AuthID = location.href.split('=')[1];
            }
            var resultCauHinhWebSite3 = NTS.getAjax("/HeThong/Login/GetCauHinhWebSite3", {});
            if (resultCauHinhWebSite3.length > 0) {
                $('.lblTenVietTatPM').text(resultCauHinhWebSite3[0].TenPMVietTatPM);
                $('.lblTenPhanMem').text(resultCauHinhWebSite3[0].TenPhanMem);
                $('.lblSoDienThoai').text(resultCauHinhWebSite3[0].SoDT);
                $('.lblEmail').text(resultCauHinhWebSite3[0].Email);
                $('.lblweb').text(resultCauHinhWebSite3[0].Web);
                $('body').css('background-image', 'url('+resultCauHinhWebSite3[0].Banner+')');
            } else {
                $('.lblTenVietTatPM').text("");
                $('.lblTenPhanMem').text("");
                $('.lblSoDienThoai').text("");
                $('.lblEmail').text("");
                $('.lblweb').text("");
            }
        });

        $(document).on('click', '#btnXacThuc', async function () {
            debugger
            if ($('#txtMaXacThuc').val().length == 6) {
                var data = JSON.parse(NTS.getAjax('/api/checkAuthCode', { code: $('#txtMaXacThuc').value() + '_' + AuthID }));
                if (data.split('_')[0] == "1") {
                    NTS.dongthongbao();
                    thongbao(data.split('_')[2])
                    setTimeout(function () {
                        window.location = "/ResetPassword/ResetPassword.html?AuthID=" + data.split('_')[1];
                    }, 3000);
                }
                else
                    if (data.split('_')[0] == "0") {
                        NTS.dongthongbao();
                        canhbao(data.split('_')[1]);
                    }
                    else
                        if (data.split('_')[0] == "-1") {
                            NTS.dongthongbao();
                            canhbao(data.split('_')[1]);
                        }
                        else
                            if (data.split('_')[0] == "-2") {
                                NTS.dongthongbao();
                                canhbao(data.split('_')[1]);
                                setTimeout(function () {
                                    window.location = "/hethong/login";
                                }, 3000);
                            }
            } else {
                NTS.dongthongbao();
                canhbao('Vui lòng nhập đủ 6 ký tự!');
                return false;
            }
            return false;
        });
        $(document).on('click', '#btnTrangChu', async function () {
            window.location = "/hethong/login";
            return false;
        });
    </script>
</body>
