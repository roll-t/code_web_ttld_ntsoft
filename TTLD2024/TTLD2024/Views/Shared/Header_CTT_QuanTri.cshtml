            </ul>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(document).on('click', '#btnTongQuan', function () {
            let trangthai_display = $("#showDangXuat_header").css('display');
            if (trangthai_display == "none") {
                $("#showDangXuat_header").css('display', 'block');
            } else {
                $("#showDangXuat_header").css('display', 'none');
            }
        });

    });
    function showMenuMobileQT() {
        let trangthai_display = $("#menu-mobile-qt").css('display');
        if (trangthai_display == "none") {
            $("#menu-mobile-qt").css('display', 'block');
        } else {
            $("#menu-mobile-qt").css('display', 'none');
        }
    }
</script>
